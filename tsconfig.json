{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",
    "types": [
      "nativewind/types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./nativewind-env.d.ts",
    "src",
    "App.tsx",
    "nativewind-env.d.ts"
  ]
}